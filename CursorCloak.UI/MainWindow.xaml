<!-- =================================================================================== -->
<!--  FILE 1: MainWindow.xaml (The NEW UI Design)                                        -->
<!--  A complete redesign for a more beautiful, modern, and functional UI.               -->
<!-- =================================================================================== -->
<Window x:Class="CursorCloak.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CursorCloak" Height="350" Width="320"
        WindowStyle="None" ResizeMode="CanMinimize"
        Background="Transparent" AllowsTransparency="True"
        FontFamily="Segoe UI" FontWeight="Normal"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Simple Toggle Switch Style -->
        <Style x:Key="SimpleToggleSwitch" TargetType="{x:Type CheckBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <Border x:Name="border" Width="48" Height="24" CornerRadius="12" 
                                Background="#374151" BorderBrush="#4b5563" BorderThickness="1"
                                SnapsToDevicePixels="True" Cursor="Hand">
                            <Ellipse x:Name="dot" Fill="#9ca3af" Width="16" Height="16" 
                                     HorizontalAlignment="Left" Margin="3,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b82f6"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#2563eb"/>
                                <Setter TargetName="dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="dot" Property="Fill" Value="White"/>
                                <Setter TargetName="dot" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Simple CheckBox Style -->
        <Style x:Key="SimpleCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#d1d5db"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <!-- Main Container with Drop Shadow -->
    <Border Background="#1f2937" CornerRadius="12" Margin="10">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="8" BlurRadius="20" Opacity="0.3" Color="Black"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Border Grid.Row="0" Background="#111827" CornerRadius="12,12,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid Height="45">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- App Title with Icon -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" 
                                VerticalAlignment="Center" Margin="20,0">
                        <Ellipse Width="8" Height="8" Fill="#3b82f6" Margin="0,0,10,0"/>
                        <TextBlock Text="CursorCloak" FontSize="16" FontWeight="SemiBold" 
                                   Foreground="#f9fafb"/>
                    </StackPanel>
                    
                    <!-- Window Controls -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                        <Button x:Name="MinimizeButton" Content="−" Width="30" Height="30" 
                                Background="Transparent" BorderThickness="0" 
                                Foreground="#9ca3af" FontSize="16" FontWeight="Bold"
                                Click="MinimizeButton_Click" Cursor="Hand"/>
                        <Button x:Name="CloseButton" Content="×" Width="30" Height="30" 
                                Background="Transparent" BorderThickness="0" 
                                Foreground="#ef4444" FontSize="18" FontWeight="Bold"
                                Click="CloseButton_Click" Cursor="Hand" Margin="5,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <StackPanel Grid.Row="1" Margin="25,20,25,25">

                <!-- Main Feature -->
                <Border Background="#374151" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="CURSOR HIDING" 
                                   Foreground="#f9fafb" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" FontSize="15"/>
                        <CheckBox Grid.Column="1" x:Name="MainToggle" 
                                  Style="{StaticResource SimpleToggleSwitch}"/>
                    </Grid>
                </Border>

                <!-- Hotkey Information -->
                <Border Background="#374151" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="HOTKEY" 
                                   Foreground="#9ca3af" FontWeight="SemiBold" FontSize="12" Margin="0,0,0,10"/>
                        <TextBlock x:Name="HotkeyTextBlock" Text="Alt + H / Alt + S" 
                                   TextAlignment="Center" FontSize="14" Foreground="#d1d5db"/>
                    </StackPanel>
                </Border>

                <!-- Startup Option -->
                <CheckBox x:Name="StartupCheck" Content="Start with Windows" 
                          Style="{StaticResource SimpleCheckBox}"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>