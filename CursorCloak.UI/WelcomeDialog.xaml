<Window x:Class="CursorCloak.UI.WelcomeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to CursorCloak" Height="400" Width="500"
        WindowStyle="SingleBorderWindow" ResizeMode="NoResize"
        Background="#0e1218" Foreground="#e6edf3"
        FontFamily="Segoe UI"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Welcome to CursorCloak!" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#0078D7"/>
            <TextBlock Text="Professional Cursor Management Utility" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"
                       Foreground="#7d8590"/>
        </StackPanel>

        <!-- User Information Form -->
        <Border Grid.Row="1" Background="#161b22" BorderBrush="#30363d" BorderThickness="1" 
                CornerRadius="6" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="User Information" FontSize="16" FontWeight="SemiBold" 
                           Margin="0,0,0,15" Foreground="#e6edf3"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Display Name:" 
                               VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="DisplayNameBox" Grid.Row="0" Grid.Column="1" 
                             Background="#0d1117" Foreground="#e6edf3" 
                             BorderBrush="#30363d" BorderThickness="1"
                             Padding="8" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Organization:" 
                               VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox x:Name="OrganizationBox" Grid.Row="1" Grid.Column="1" 
                             Background="#0d1117" Foreground="#e6edf3" 
                             BorderBrush="#30363d" BorderThickness="1"
                             Padding="8" Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Username:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="UsernameBox" Grid.Row="2" Grid.Column="1" 
                             Background="#0d1117" Foreground="#e6edf3" 
                             BorderBrush="#30363d" BorderThickness="1"
                             Padding="8" IsReadOnly="True"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Features and Settings -->
        <Border Grid.Row="2" Background="#161b22" BorderBrush="#30363d" BorderThickness="1" 
                CornerRadius="6" Padding="20">
            <StackPanel>
                <TextBlock Text="Features &amp; Settings" FontSize="16" FontWeight="SemiBold" 
                           Margin="0,0,0,15" Foreground="#e6edf3"/>
                
                <CheckBox x:Name="BackgroundModeCheck" Content="Run in background when closed" 
                          Foreground="#e6edf3" Margin="0,0,0,10" IsChecked="True"/>
                <TextBlock Text="App continues running when you close the window, keeping hotkeys active"
                           FontSize="12" Foreground="#7d8590" Margin="20,0,0,15"/>
                
                <CheckBox x:Name="StartupCheck" Content="Start with Windows" 
                          Foreground="#e6edf3" Margin="0,0,0,10" IsChecked="True"/>
                <TextBlock Text="Automatically start CursorCloak when Windows boots up"
                           FontSize="12" Foreground="#7d8590" Margin="20,0,0,15"/>
                
                <CheckBox x:Name="NotificationsCheck" Content="Show notifications" 
                          Foreground="#e6edf3" Margin="0,0,0,10" IsChecked="True"/>
                <TextBlock Text="Display brief notifications for important events"
                           FontSize="12" Foreground="#7d8590" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" Content="Skip" Width="80" Height="32" 
                    Background="#21262d" Foreground="#e6edf3" 
                    BorderBrush="#30363d" BorderThickness="1"
                    Margin="0,0,10,0" Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="Save &amp; Continue" Width="120" Height="32" 
                    Background="#0078D7" Foreground="White" 
                    BorderBrush="#0078D7" BorderThickness="1"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
